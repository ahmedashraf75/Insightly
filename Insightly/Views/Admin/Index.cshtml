@model IEnumerable<Insightly.Models.ApplicationUser>
@{
    ViewData["Title"] = "Admin";
}

<div class="home-page container py-3">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="fw-bold mb-1"><i class="bi bi-shield-lock me-2"></i>Admin Panel</h2>
            <p class="text-muted small mb-0">Manage admin users and promote new admins</p>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Current Admins Section -->
    <div class="post-card mb-4">
        <div class="p-3">
            <h4 class="fw-bold mb-3"><i class="bi bi-people me-2"></i>Current Admins (@Model.Count())</h4>
            
            @if (Model.Any())
            {
                <div class="row">
                    @foreach (var admin in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card border-0 bg-light">
                                <div class="card-body p-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            @if (!string.IsNullOrEmpty(admin.ProfilePicture))
                                            {
                                                <img src="@admin.ProfilePicture" alt="@admin.Name" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <i class="bi bi-person text-white"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1 fw-semibold">@admin.Name</h6>
                                            <p class="mb-1 text-muted small">@admin.Email</p>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar me-1"></i>
                                                Admin since @admin.CreatedAt.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                        <div class="flex-shrink-0">
                                            @if (admin.Id != ViewBag.CurrentUserId)
                                            {
                                                <form asp-controller="Admin" asp-action="RemoveAdmin" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to remove @admin.Name from admin role?')">
                                                    <input type="hidden" name="userId" value="@admin.Id" />
                                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Remove Admin">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary">You</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-2">No admins found</p>
                </div>
            }
        </div>
    </div>

    <!-- Promote User Card -->
    <div class="post-card">
        <div class="p-3">
            <form asp-controller="Admin" asp-action="PromoteByEmail" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label fw-semibold small">User Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="user@example.com" required />
                    <div class="form-text small">Enter the exact email of the user you want to promote.</div>
                </div>

                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary" style="background-color: #ff4b37; border-color: #ff4b37;">
                            <i class="bi bi-arrow-up-circle me-1"></i>Promote to Admin
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                    <div class="text-muted small">
                        <i class="bi bi-info-circle me-1"></i>
                        Admins can manage other users
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



