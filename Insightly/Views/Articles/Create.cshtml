@model Insightly.Models.Article

@{
    ViewData["Title"] = "Create Article";
}

<div class="home-page container py-3">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="fw-bold mb-1">Create New Article</h2>
            <p class="text-muted small mb-0">Share your thoughts with the community</p>
        </div>
        <div>
            <a asp-controller="Articles" asp-action="MyArticles" class="btn btn-outline-secondary btn-sm">← My Articles</a>
        </div>
    </div>

    <!-- Create Form Card -->
    <div class="post-card">
        <div class="p-3">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold small">Article Title</label>
                    <input asp-for="Title" class="form-control" placeholder="What's your article about?" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label fw-semibold small">Content</label>
                    <textarea asp-for="Content" class="form-control" rows="8" placeholder="Write your article content here..."></textarea>
                    <span asp-validation-for="Content" class="text-danger small"></span>
                    <div class="form-text small">Be thoughtful and respectful in your writing.</div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold small">Photo (optional)</label>
                    <input type="file" name="photo" accept="image/*" class="form-control" />
                    <div class="form-text small">PNG, JPG, or GIF up to 5 MB.</div>
                </div>

                <hr class="my-3" />

                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary" style="background-color: #ff4b37; border-color: #ff4b37;">
                            <i class="bi bi-send me-1"></i>Publish
                        </button>
                        <a asp-controller="Articles" asp-action="MyArticles" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                    <div class="text-muted small">
                        <i class="bi bi-info-circle me-1"></i>
                        Visible to all users
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tips Card -->
    <div class="post-card mt-3">
        <div class="p-3">
            <h6 class="fw-semibold mb-2">
                <i class="bi bi-lightbulb me-1"></i>Writing Tips
            </h6>
            <ul class="list-unstyled mb-0 small">
                <li class="mb-1">
                    <i class="bi bi-check-circle text-success me-1"></i>
                    <strong>Clear Title:</strong> Make it descriptive and engaging
                </li>
                <li class="mb-1">
                    <i class="bi bi-check-circle text-success me-1"></i>
                    <strong>Well-structured:</strong> Use proper formatting
                </li>
                <li class="mb-1">
                    <i class="bi bi-check-circle text-success me-1"></i>
                    <strong>Be respectful:</strong> Follow community guidelines
                </li>
                <li class="mb-0">
                    <i class="bi bi-check-circle text-success me-1"></i>
                    <strong>Add value:</strong> Share helpful knowledge
                </li>
            </ul>
        </div>
    </div>
</div>

@* Removed unused jQuery validation scripts *@
