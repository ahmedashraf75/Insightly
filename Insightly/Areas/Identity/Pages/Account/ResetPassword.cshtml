@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<div class="auth-page">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card auth-card">
                    <div class="card-body p-5">
                        <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>
                        <p class="text-muted text-center mb-4">Enter your new password below.</p>
                        <form method="post" class="auth-form">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                            <input asp-for="Input.Code" type="hidden" />
                            <div class="form-floating">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password" />
                                <label asp-for="Input.Password" class="form-label">New Password</label>
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>
                            <div class="form-floating">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password" />
                                <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                            </div>
                            <div class="mt-4 mb-4">
                                <button type="submit" class="w-100 btn btn-lg auth-btn">
                                    <i class="bi bi-shield-lock me-1"></i>Reset Password
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="mt-4 p-3 text-center text-muted">
                    <p class="small mb-0">© @DateTime.Now.Year Instghtly. All rights reserved.</p>
                </div>
            </div>
        </div>
    </div>
</div>
@* Removed unused jQuery validation scripts *@
