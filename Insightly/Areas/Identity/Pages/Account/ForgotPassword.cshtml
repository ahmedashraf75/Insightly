@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="auth-page">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card auth-card">
                    <div class="card-body p-5">
                        <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>
                        <p class="text-muted text-center mb-4">Enter your email and we'll send you a password reset link.</p>

                        <form method="post" class="auth-form">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                            <div class="form-floating">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">Email</label>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="mt-4 mb-4">
                                <button type="submit" class="w-100 btn btn-lg auth-btn">
                                    <i class="bi bi-envelope me-1"></i>Send Reset Link
                                </button>
                            </div>

                            <div class="text-center">
                                <p class="mb-2">
                                    Remember your password? <a class="text-decoration-none" asp-page="./Login">Log in</a>
                                </p>
                                <p class="mb-0">
                                    Don't have an account? <a class="text-decoration-none" asp-page="./Register">Register</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="mt-4 p-3 text-center text-muted">
                    <p class="small mb-0">© @DateTime.Now.Year Insightly. All rights reserved.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@* Removed unused jQuery validation scripts *@
